apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: dev-wkfn-server-cert
spec:
  dnsNames:
    - >- 
      *.${CLUSTER_DOMAIN}
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  usages:
    - server auth
  issuerRef:
    group: cert-manager.io
    kind: ClusterIssuer
    name: selfsigned-wkfn-cluster-issuer
  secretName: wkfn-server-cert
  subject:
    organizations:
    - ibm
